<!-- profile/index.wxml -->
<view class="page">
  <view class="header">
    <text class="title">个人中心</text>
    <view class="avatar">
      <image class="avatar__img" src="/source/logo.png" mode="aspectFit"></image>
    </view>
    <text class="name">Pixel Pad</text>
    <text class="email">pixelpad@example.com</text>
    <text class="birthday">生日：11月15日</text>
    <view class="stats">
      <view class="stats__item">
        <text class="stats__value">INFP</text>
        <text class="stats__label">人格</text>
      </view>
      <view class="stats__divider"></view>
      <view class="stats__item">
        <text class="stats__value">18</text>
        <text class="stats__label">年龄</text>
      </view>
      <view class="stats__divider"></view>
      <view class="stats__item">
        <text class="stats__value">重庆</text>
        <text class="stats__label">地区</text>
      </view>
    </view>
  </view>

  <view class="menu">
    <view class="menu__item">
      <view class="menu__icon">
        <image class="menu__icon-img" src="/assets/profile/icon-user.svg" mode="aspectFit"></image>
      </view>
      <view class="menu__text">个人信息</view>
      <view class="menu__arrow"></view>
    </view>
    <view class="menu__item">
      <view class="menu__icon">
        <image class="menu__icon-img" src="/assets/profile/icon-favorite.svg" mode="aspectFit"></image>
      </view>
      <view class="menu__text">收藏</view>
      <view class="menu__arrow"></view>
    </view>
    <view class="menu__item">
      <view class="menu__icon">
        <image class="menu__icon-img" src="/assets/profile/icon-privacy.svg" mode="aspectFit"></image>
      </view>
      <view class="menu__text">隐私保护</view>
      <view class="menu__arrow"></view>
    </view>
    <view class="menu__item">
      <view class="menu__icon">
        <image class="menu__icon-img" src="/assets/profile/icon-settings.svg" mode="aspectFit"></image>
      </view>
      <view class="menu__text">设置</view>
      <view class="menu__arrow"></view>
    </view>
    <view class="menu__item">
      <view class="menu__icon">
        <image class="menu__icon-img" src="/assets/profile/icon-service.svg" mode="aspectFit"></image>
      </view>
      <view class="menu__text">客服</view>
      <view class="menu__arrow"></view>
    </view>
    <view class="menu__item">
      <view class="menu__icon">
        <image class="menu__icon-img" src="/assets/profile/icon-logout.svg" mode="aspectFit"></image>
      </view>
      <view class="menu__text">退出账号</view>
      <view class="menu__arrow"></view>
    </view>
  </view>
</view>
